<configuration>
    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{ISO8601,UTC}Z|%-5p%marker|%t|%c{1}|%m%n</pattern>
        </encoder>
    </appender>

    <logger name="appnotifier">
        <level value="info" />
    </logger>

    <logger name="appnotifier.web.servlet.WebJarsServlet">
        <level value="debug" />
    </logger>

    <logger name="appnotifier.web.provider">
        <level value="info" />
    </logger>

    <root>
        <level value="info" />
        <appender-ref ref="Console" />
    </root>
</configuration>
